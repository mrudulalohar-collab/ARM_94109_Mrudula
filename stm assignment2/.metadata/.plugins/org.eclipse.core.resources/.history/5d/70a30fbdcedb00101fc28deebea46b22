#include"stm32f407xx.h"
void GPIO_init(void)

{
	//0. enable clock for GPIOD in AHB1
	RCC->AHB1ENR |= BV(3);
	//1. select mode as output
	GPIOD->MODER &= ~(BV(25));
	GPIOD->MODER |= BV(24);
	//2. select type as push pull
	GPIOD->OTYPER &= ~(BV(12));
	//3. select speed as low
	GPIOD->OSPEEDR &= ~(BV(25));
	GPIOD->OSPEEDR &= ~(BV(24));
	//4. select pull up/down as no
	GPIOD->PUPDR &= ~(BV(25));
	GPIOD->PUPDR &= ~(BV(24));
}

void switch_status()
{
   return(GPIOA->IDR & BV(0));
	if{

		 return 1;
	}
	else
	{
	     return 0;

}
void led_on(void)
{
	GPIOD->ODR |= BV(12);
}
void led_off(void)
{
	GPIOD->ODR &= ~BV(12);
}




